@model IEnumerable<Ictshop.Models.Donhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Sách Đơn Hàng</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mahdon</th>
                <th>Ngaydat</th>
                <th>Tinhtrang</th>
                <th>Manguoidung</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Madon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ngaydat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tinhtrang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNguoidung)
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Madon }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có đơn hàng nào để hiển thị.</p>
}
